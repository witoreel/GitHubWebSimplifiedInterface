@model List<Way2Software2.Models.GHRepository>

<hgroup class="title">
    <h1>Pesquisar repositórios:</h1>
</hgroup>

<article>

    @using (Html.BeginForm("Search", "Main")) {
        @Html.TextBox("keyword")
        <input type="submit" value="Pesquisar" />
    }
                
    <ul>
        @if (Model != null){
            if (Model.Count > 0 && Model[0] == null){
               <li>
                   <h3>Houve um erro ao realizar a pesquisa.</h3><br>
                   Por favor, entre em contato com o desenvolvedor do sistema.
               </li>
            } else {
                foreach(var item in Model){
                    <li >
                        <div>
                            <hr>
                            <span class="repositories">@item.stargazers_count Estrelas</span>

                            <h3 class="repositories">
                                 @Html.ActionLink(item.name, "Repository", "Main", new { repository_fullname = item.full_name }, null)
                            </h3>
                            @item.description
                            <hr>                   
                        </div>                 
        
                    </li>        
                }
            }
            if (@Model.Count == 0){
               <li><h3>Não foi encontrado nenhum repositório</h3></li>
            }
        }        
            
    </ul>
</article>
