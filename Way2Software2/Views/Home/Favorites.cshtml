@model List<Way2Software2.Models.GHRepository>

<hgroup class="title">
    <h1>Repositórios Favoritos:</h1>
</hgroup>

<article>

<ul>

   @foreach(var item in Model){
    <li >
        <div>   
            <hr />      
            <span class="repositories">@item.stargazers_count Estrelas</span>
            <h3 class="repositories">
                @Html.ActionLink(item.name, "Repository", "Home", new { repository_fullname = item.full_name }, null)
            </h3>   
            @item.full_name
            <hr />
            
        </div>       
    </li>
        
    }
    @if (Model.Count == 0) {
        <li ><h3>Nenhum favorito cadastrado.</h3></li >
    }

</ul>

</article>
